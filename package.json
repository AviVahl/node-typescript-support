    "@types/source-map-support": "^0.5.0",
    "@types/webpack": "^4.39.2",
    "chai": "^4.2.0",
    "lerna": "^3.16.5",
    "mocha": "^6.2.1",
    "prettier": "^1.18.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "rimraf": "^3.0.0",
    "tslint": "^5.20.0",
    "typescript": "~3.6.3",
