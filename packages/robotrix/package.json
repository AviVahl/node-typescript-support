{
  "name": "robotrix",
  "version": "0.2.0",
  "description": "Several useful TypeScript transpilation transformers",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs ./esm",
    "prebuild": "yarn clean",
    "build": "run-p build:cjs build:esm",
    "build:cjs": "tsc --project src --outDir cjs --module commonjs",
    "build:esm": "tsc --project src --outDir esm --module esnext",
    "lint": "run-p lint:src lint:test",
    "lint:src": "tslint --project src",
    "lint:test": "tslint --project test",
    "test": "mocha -r typescript-support \"test/**/*.unit.ts\" --watch-extensions ts"
  },
  "peerDependencies": {
    "typescript": ">=2.8.0"
  },
  "files": [
    "cjs",
    "esm",
    "src"
  ],
  "sideEffects": false,
  "author": "Avi Vahl <avi.vahl@wix.com>",
  "license": "MIT",
  "repository": "git@github.com:AviVahl/typescript-tools.git",
  "homepage": "https://github.com/AviVahl/typescript-tools/tree/master/packages/robotrix"
}
