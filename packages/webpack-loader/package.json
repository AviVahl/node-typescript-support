{
  "name": "@ts-tools/webpack-loader",
  "version": "0.7.3",
  "description": "TypeScript loader for webpack.",
  "main": "cjs/index.js",
  "types": "cjs/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs",
    "build": "yarn build:cjs",
