    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/source-map-support": "^0.5.0",
    "@types/webpack": "^4.4.31",
    "chai": "^4.2.0",
    "lerna": "^3.13.4",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^2.6.3",
    "tslint": "^5.16.0",
    "typescript": "~3.4.5",
    "webpack": "^4.31.0"
  },
