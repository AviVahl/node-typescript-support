{
  "name": "typescript-support",
  "description": "TypeScript support for Node.js.",
  "version": "0.3.0",
  "main": "./cjs/index.js",
  "types": "./cjs/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs",
    "prebuild": "yarn clean",
    "build": "tsc -p src",
    "lint": "tslint -p src && tslint -p test",
    "pretest": "yarn build && yarn lint",
    "test": "mocha \"./test/**/*.unit.ts\" --watch-extensions ts -r typescript-support --timeout 10000",
    "prepack": "yarn build"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "node-typescript-service": "^0.3.0",
    "source-map-support": "^0.5.6"
  },
  "peerDependencies": {
    "typescript": ">=2.8.0"
  },
  "files": [
    "cjs",
    "src"
  ],
  "repository": "git@github.com:AviVahl/node-typescript-support.git",
  "author": "Avi Vahl <avi.vahl@wix.com>",
  "license": "MIT"
}
