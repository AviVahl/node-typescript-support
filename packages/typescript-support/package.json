{
  "name": "typescript-support",
  "description": "TypeScript support for Node.js.",
  "version": "0.5.5",
  "main": "./cjs/index.js",
  "types": "./cjs/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs",
    "build": "tsc -p src",
    "lint": "run-p lint:src lint:test",
    "lint:src": "tslint -p src",
    "lint:test": "tslint -p test",
    "test": "mocha \"./test/**/*.unit.ts\" --watch-extensions ts -r typescript-support --timeout 10000"
  },
  "dependencies": {
    "node-typescript-service": "^0.4.5",
    "source-map-support": "^0.5.9"
  },
  "peerDependencies": {
    "typescript": ">=2.8.0"
  },
  "files": [
    "cjs",
    "src",
    "warn.js"
  ],
  "author": "Avi Vahl <avi.vahl@wix.com>",
  "license": "MIT",
  "repository": "git@github.com:AviVahl/typescript-tools.git",
  "homepage": "https://github.com/AviVahl/typescript-tools/tree/master/packages/typescript-support"
}
